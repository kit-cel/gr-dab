<block>
  <name>DAB: MP2 Encoder</name>
  <key>dab_mp2_encode_sb</key>
  <category>[DAB]</category>
  <import>import dab</import>
  <make>dab.mp2_encode_sb($bit_rate_n, $channels, $sample_rate)</make>
  <param>
	  <name>Bitrate / 8 kbit/s</name>
    <key>bit_rate_n</key>
    <type>int</type>
  </param>
  <param>
    <name>Channels</name>
    <key>channels</key>
    <type>int</type>
    <option>
    	<name>Mono</name>
    	<key>1</key>
    </option>
    <option>
    	<name>Stereo</name>
    	<key>2</key>
    </option>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>int</type>
    <option>
    	<name>24 kHz</name>
    	<key>24000</key>
    </option>
    <option>
    	<name>48 kHz</name>
    	<key>48000</key>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>short</type>
    <nports>$channels</nports>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
